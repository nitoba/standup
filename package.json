{
  "name": "standup-volt",
  "version": "0.1.0",
  "description": "A VoltAgent application",
  "type": "module",
  "scripts": {
    "dev:volt": "bun run --hot ./src/index.ts",
    "dev:ui": "bun run --hot ./src/cli/ui/index.tsx",
    "build:win": "bun build --compile --target=bun-windows-x64-modern src/cli/ui/index.tsx --outfile ./standup-win --minify  --format=esm --external '@opentui/core'",
    "build:linux": "bun build --compile --target=bun-linux-x64-modern src/cli/ui/index.tsx --outfile ./standup-linux --minify --format=esm",
    "build:mac": "bun build --compile --target=bun-darwin-arm64 src/cli/ui/index.tsx --outfile ./standup-mac --minify --format=esm --external '@opentui/core'",
    "build": "bun build:win && bun build:linux && bun build:mac",
    "start": "node dist/index.js",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "volt": "volt"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.24",
    "@ai-sdk/openai-compatible": "^1.0.23",
    "@opentui/core": "^0.1.27",
    "@opentui/react": "^0.1.27",
    "@voltagent/cli": "^0.1.10",
    "@voltagent/core": "^1.0.0",
    "@voltagent/libsql": "^1.0.0",
    "@voltagent/logger": "^1.0.0",
    "@voltagent/server-hono": "^1.0.0",
    "ai": "^5.0.81",
    "dotenv": "^16.4.7",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^22.10.5",
    "tsdown": "^0.15.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "bun@1.3.1"
}
